<%= render 'shared/header', header: "#{@user.username}'s Profile" %>
<h2>Reviews</h2>
<% @user.posts.each do |post| %>
  <%= render 'posts/post', post: post %>
<% end %>
<h2>Comments</h2>
<% @user.comments.each do |comment| %>
  <div class="panel panel-default">
    <div class="panel-heading"><h4><%= link_to "Review: #{comment.post.title}", review_path(comment.post) %></h4></div>
    <div class="panel-body">
      <h4>Comment:</h4>
      <%= comment.body %>
    </div>
  </div>
<% end %>
