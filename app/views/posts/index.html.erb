
<div class="row">
  <div class="col-md-3">
    <ul>
      <h2>Categories</h2>
      <% @categories.each do |category| %>
        <%= render 'categories/category', category: category %>
      <% end %>
    </ul>
  </div>
  <div class="col-md-9">
    <h1>Reviews: All</h1>
    <% @posts.each do |post| %>
      <%= render 'post', post: post %>
    <% end %>
  </div>
</div>